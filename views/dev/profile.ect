<input type="hidden" id="id" value="<%= @id %>"/>
<input type="hidden" id="name" value="<%= @name %>"/>
<button name="facebookOn" onclick="App.userProfile.connect('facebook')">Connect</button>
<button name="facebookOff" onclick="App.userProfile.disconnect('facebook')">Disconnect</button>
Facebook: <%= @connections.facebook %>
<div id="facebook"></div><hr>
