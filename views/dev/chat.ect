<input type="hidden" id="id" value="<%= id %>"/>
<input type="hidden" id="name" value="<%= name %>"/>
<input type="hidden" id="pid" value="<%= pid %>"/>
<div style="float:left;width:200px;border-right:1px solid black;height:300px;padding:10px;overflow:scroll-y;">
<a href="/dev/projects"><b>PROJECTS</b></a>
<% if @projects.length : %>
  <form id="projects">
    <% for project in @projects : %>
    <input type="radio" name="project" value="<%= project.id %>" onchange="switchChatProject()"/><%= project.name %><br>
    <% end %>
  </form>
<% end %>
<hr>
<b>USERS</b>
<div id="users"></div>
</div>
<div style="float:left;width:300px;height:250px;overflow:scroll-y;padding:10px;">
<div id="conversation"></div>
<input id="data" style="width:200px;" />
<input type="button" id="datasend" value="send" />
</div>
