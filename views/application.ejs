    <script src="/public/stylesheets/bootstrap/js/bootstrap-button.js"></script>
    <script src="/public/stylesheets/bootstrap/js/bootstrap-collapse.js"></script>
    <script src="/public/stylesheets/bootstrap/js/bootstrap-carousel.js"></script>
    <script src="/public/stylesheets/bootstrap/js/bootstrap-typeahead.js"></script>
    <link href="/public/stylesheets/style.css" rel="stylesheet">
	<link href="/public/stylesheets/bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="/public/stylesheets/bootstrap/css/bootstrap-responsive.css" rel="stylesheet">
  </head>
  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">A-TEASE</a>
          <div class="btn-group pull-right">

		  <% if (typeof user != 'undefined') { %>
		  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="icon-user"></i> <%= user.name %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><a href="/users/<%= user.id %>" data-remote='true'>Profile</a></li>
            <li class="divider"></li>
            <li><a href="/logout">Sign Out</a></li>
          </ul>
		  <% } %>

          </div>
          <div class="nav-collapse">
            <ul class="nav">
              <li class="active"><a href="#">Home</a></li>
              <li><a href="#about">About</a></li>
              <li><a href="#contact">Contact</a></li>
            </ul>
			<div class="fl">
				  <div class="fl  controls">
				    <input type="text" id="login" name="login" class="input-xlarge">
				  </div>
                  <a href="/search" data-remote="true" class="fl btn btn-primary btn-large">Search</a>
			</div>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

	<% if (typeof user != 'undefined') { %>
	<div class="leftcol">
		<div class="clear_medium"></div><div class="clear_medium"></div>
		<a href="/users/<%= user.id %>" data-remote="true">
			<img src="/public/images/profile.png" style="width:60px;" ><br>
			Profile
		</a>
		<div class="clear_medium"></div><div class="clear_medium"></div>

		<a href="/photos" data-remote="true">
			<img src="/public/images/photo.png" style="width:80px;" ><br>
			Photos
		</a>
		<div class="clear_medium"></div><div class="clear_medium"></div>

		<a href="/videos" data-remote="true">
			<img src="/public/images/video.jpg" style="width:80px;" ><br>
			Videos
		</a>
		<div class="clear_medium"></div><div class="clear_medium"></div>

		<a href="/documents" data-remote="true">
			<img src="/public/images/documents.jpg" style="width:80px;" ><br>
			Documents
		</a>
		<div class="clear_medium"></div><div class="clear_medium"></div>

		<a href="/friends" data-remote="true">
			<img src="/public/images/friends.jpg" style="width:60px;" ><br>
			Friends
		</a>
		<div class="clear_medium"></div><div class="clear_medium"></div>
	</div>
	<% } %>

	<div id="main-content" class="page tab-pane">
		<% if (typeof user != "undefined") { %>
			<%- blocks.template %>
		<% } else { %>
			<%- include('partials/mainpage.ejs') %>
		<% } %>
	</div>
  </body>
</html>

