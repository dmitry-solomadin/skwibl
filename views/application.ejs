	<script src="/public/javascripts/jquery/jquery.bgiframe-2.1.2.js"></script>
	<script src="/public/javascripts/frontend.js"></script>
	<link href="/public/javascripts/jquery/jquery-ui-1.8.21.custom.css" rel="stylesheet">

	<!-- jplayer start-->
