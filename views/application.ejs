    <script src="/public/stylesheets/bootstrap/js/bootstrap-transition.js"></script>
    <script src="/public/stylesheets/bootstrap/js/bootstrap-alert.js"></script>
    <script src="/public/stylesheets/bootstrap/js/bootstrap-modal.js"></script>
