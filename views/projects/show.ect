<div id="chat" class="chat">
  <div class="conversation">
    <div id="conversation-inner" class="conversation-inner"></div>
  </div>
  <div class="conversation-controls">
    <div id="participants" class="participants">

    </div>
    <div>
      <textarea class="chattext" id="chattext"></textarea>
    </div>
    <input class="btn btn-large fr" type="button" id="chatsend" value="Send"/>
