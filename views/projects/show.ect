    <div id="file-uploader" class="canvasUpload" style="float: right;"></div>
  </div>
  <div class="canvasFooterBottom">
    <div id="canvasSelectDiv" class="canvasSelectDiv">
      <a href="#" class="canvasSelected">
        <canvas width="80" height="60"></canvas>
      </a>
    </div>
  </div>
</div>
