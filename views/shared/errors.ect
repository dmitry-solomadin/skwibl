<% errorMessages = @general.errorMessages() %>
<% if errorMessages and errorMessages.length : %>
  <div id="errorMessages" class="alert alert-error">
    Please, fix following errors:
    <ul>
    <% for error in errorMessages : %>
      <li data-error-id="<%= error.id %>"><%= error.text %></li>
    <% end %>
    </ul>
  </div>
<% end %>